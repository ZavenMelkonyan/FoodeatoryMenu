@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="/css/menu.css">
</head>
@{
    <img id="contol" class="btn_control" src="~/Resources/flag-of-armenia.jpg" />
    <a href="@Url.Action("Sashimi","Sushi")">
        <img id="btn" class="btn" src="/Resources/USFLag.jpg" height="60" width="90" alt="clear" />
    </a>
    <a href="@Url.Action("SashimiRus","Sushi")">
        <img id="btn_rus" class="btn" src="/Resources/Flag-Russia.jpg" height="60" width="90" alt="clear" />
    </a>
    <a href="@Url.Action("SashimiArm","Sushi")">
        <img id="btn_arm" class="btn" src="/Resources/flag-of-armenia.jpg" height="60" width="90" alt="clear" />
    </a>
    <a href="@Url.Action("Index","Sushi")">
        <img id="btn_back" class="btn" src="/Resources/1024px-Back_Arrow.svg.png" height="90" width="90" alt="clear" />
    </a>
    <div class="row">
        <div class="column">
            <ul style="list-style: none;">
                <li>
                    <a href="@Url.Action("Index","SushiItems",new SushiViewModel { NameAndPrice = "Salmon Sashimi  1750", Src = "/Resources/Sushi/46 salmon sashimi.jpg", MenuName = "Sashimi" })">
                        <h1>Salmon Sashimi  1750</h1>
                        <img class="image" src="/Resources/Sushi/46 salmon sashimi.jpg" alt="1">
                    </a>
                    <a href="@Url.Action("Index","SushiItems",new SushiViewModel { NameAndPrice = "Shrimps Sashimi  1250", Src = "/Resources/Sushi/49 shrimp sashimi.jpg", MenuName = "Sashimi" })">
                        <h1>Shrimps Sashimi  1250</h1>
                        <img class="image" src="/Resources/Sushi/49 shrimp sashimi.jpg" alt="1">
                    </a>
                </li>
            </ul>
        </div>
        <div class="column">
            <ul style="list-style: none;">
                <li>
                    <a href="@Url.Action("Index","SushiItems",new SushiViewModel { NameAndPrice = "Tuna Sashimi  1750", Src = "/Resources/Sushi/47 tuna sashimi.jpg", MenuName = "Sashimi" })">
                        <h1>Tuna Sashimi  1750</h1>
                        <img class="image" src="/Resources/Sushi/47 tuna sashimi.jpg" alt="1">
                    </a>
                    <a href="@Url.Action("Index","SushiItems",new SushiViewModel { NameAndPrice = "Ocean mushroom Sashimi  1250", Src = "/Resources/no_image.jpg", MenuName = "Sashimi" })">
                        <h1>Ocean mushroom Sashimi  1250</h1>
                        <img class="image" src="/Resources/no_image.jpg" alt="1">
                    </a>
                </li>
            </ul>
        </div>
        <div class="column">
            <ul style="list-style: none;">
                <li>
                    <a href="@Url.Action("Index","SushiItems",new SushiViewModel { NameAndPrice = "Smoked Eels Sashimi  2200", Src = "/Resources/Sushi/48 smoked eel sashimi.jpg", MenuName = "Sashimi" })">
                        <h1>Smoked Eels Sashimi  2200</h1>
                        <img class="image" src="/Resources/Sushi/48 smoked eel sashimi.jpg" alt="1">
                    </a>
                </li>
            </ul>
        </div>
    </div>
}
