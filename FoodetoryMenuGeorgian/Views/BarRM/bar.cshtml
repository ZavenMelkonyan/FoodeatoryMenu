@model FoodetoryMenuGeorgian.Models.RossiaMall.Bar.BarViewModel
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN">
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="/css/menu.css">
</head>
@{
    <img id="contol" class="btn_control" src="~/Resources/flag-of-armenia.jpg" />
    <a href="@Url.Action("Bar","BarRM", new HomeViewModel {isQR=Model.isQR })">
        <img id="btn" class="btn" src="/Resources/USFLag.jpg" height="60" width="90" alt="clear" />
    </a>
    <a href="@Url.Action("BarRus","BarRM", new HomeViewModel {isQR=Model.isQR })">
        <img id="btn_rus" class="btn" src="/Resources/Flag-Russia.jpg" height="60" width="90" alt="clear" />
    </a>
    <a href="@Url.Action("BarArm","BarRM", new HomeViewModel {isQR=Model.isQR })">
        <img id="btn_arm" class="btn" src="/Resources/flag-of-armenia.jpg" height="60" width="90" alt="clear" />
    </a>
    @if (Model.isQR)
    {
        <a href="@Url.Action("RossiaMall","Location", new HomeViewModel {isQR=Model.isQR })">
            <img id="btn_back" class="btn" src="/Resources/1024px-Back_Arrow.svg.png" height="90" width="90" alt="clear" />
        </a>
    }
    <div class="row">
        <div class="column">
            <ul style="list-style: none;">
                <li>
                    @for (int i = 0; i < Model.categories.categories.Count; i += 3)
                    {
                        Model.categorieName = Model.categories.categories[i].Name;
                        <a href="@Url.Action("Categorie","BarRM",Model)">
                            <h1>@Model.categories.categories[i].Name</h1>
                            <img class="image" src="@Model.categories.categories[i].CategoriePic" alt="1">
                        </a>
                    }
                </li>
            </ul>
        </div>
        <div class="column">
            <ul style="list-style: none;">
                <li>
                    @for (int i = 1; i < Model.categories.categories.Count; i += 3)
                    {
                        Model.categorieName = Model.categories.categories[i].Name;
                        <a href="@Url.Action("Categorie","BarRM",Model)">
                            <h1>@Model.categories.categories[i].Name</h1>
                            <img class="image" src="@Model.categories.categories[i].CategoriePic" alt="1">
                        </a>
                    }
                </li>
            </ul>
        </div>
        <div class="column">
            <ul style="list-style: none;">
                <li>
                    @for (int i = 2; i < Model.categories.categories.Count; i += 3)
                    {
                        Model.categorieName = Model.categories.categories[i].Name;
                        <a href="@Url.Action("Categorie","BarRM",Model)">
                            <h1>@Model.categories.categories[i].Name</h1>
                            <img class="image" src="@Model.categories.categories[i].CategoriePic" alt="1">
                        </a>
                    }
                </li>
            </ul>
        </div>
    </div>
}
