@model FoodetoryMenuGeorgian.Models.Steak.SteakViewModel
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN">
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="/css/menu.css">
</head>
@{
    <img id="contol" class="btn_control" src="~/Resources/flag-of-armenia.jpg" />
    <a href="@Url.Action("Steak","Steak")">
        <img id="btn" class="btn" src="/Resources/USFLag.jpg" height="60" width="90" alt="clear" />
    </a>
    <a href="@Url.Action("SteakRus","Steak")">
        <img id="btn_rus" class="btn" src="/Resources/Flag-Russia.jpg" height="60" width="90" alt="clear" />
    </a>
    <a href="@Url.Action("SteakArm","Steak")">
        <img id="btn_arm" class="btn" src="/Resources/flag-of-armenia.jpg" height="60" width="90" alt="clear" />
    </a>
    <div class="row">
        <div class="column">
            <ul style="list-style: none;">
                <li>
                    @for (int i = 0; i < Model.categories.categories.Count; i += 3)
                    {
                        Model.categorieName = Model.categories.categories[i].Name;
                        <a href="@Url.Action("Categorie","Steak",Model)">
                            <h1>@Model.categories.categories[i].Name</h1>
                            <img class="image" src="@Model.categories.categories[i].Products[0].PicPath" alt="1">
                        </a>
                    }
                </li>
            </ul>
        </div>
        <div class="column">
            <ul style="list-style: none;">
                <li>
                    @for (int i = 1; i < Model.categories.categories.Count; i += 3)
                    {
                        Model.categorieName = Model.categories.categories[i].Name;
                        <a href="@Url.Action("Categorie","Steak",Model)">
                            <h1>@Model.categories.categories[i].Name</h1>
                            <img class="image" src="@Model.categories.categories[i].Products[0].PicPath" alt="1">
                        </a>
                    }
                </li>
            </ul>
        </div>
        <div class="column">
            <ul style="list-style: none;">
                <li>
                    @for (int i = 2; i < Model.categories.categories.Count; i += 3)
                    {
                        Model.categorieName = Model.categories.categories[i].Name;
                        <a href="@Url.Action("Categorie","Steak",Model)">
                            <h1>@Model.categories.categories[i].Name</h1>
                            <img class="image" src="@Model.categories.categories[i].Products[0].PicPath" alt="1">
                        </a>
                    }
                </li>
            </ul>
        </div>
    </div>
}
