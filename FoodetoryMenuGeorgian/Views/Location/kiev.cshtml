@model FoodetoryMenuGeorgian.Models.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="/css/main.css">
</head>
@{
    <img id="contol" class="btn_control" src="~/Resources/flag-of-armenia.jpg" />
    <a href="@Url.Action("Kiev","Location",new HomeViewModel {isQR = Model.isQR })">
        <img id="btn" class="btn" src="/Resources/2560px-Flag_of_Ukraine.svg.png" height="60" width="90" alt="clear" />
    </a>
    <a href="@Url.Action("KievEng","Location",new HomeViewModel {isQR = Model.isQR })">
        <img id="btn_rus" class="btn" src="/Resources/USFLag.jpg" height="60" width="90" alt="clear" />
    </a>
}
<div class="row">
    <div class="column">
        <ul style="list-style: none;">
            <li>
                <a href="@Url.Action("GeorgianUA","GeorgianUA",new HomeViewModel {isQR = Model.isQR })">
                    <img class="image" src="/Resources/georgia eng.png" alt="1">
                </a>
                <a href="@Url.Action("SteakUA", "SteakUA", new HomeViewModel { isQR = Model.isQR })">
                    <img class="image" src="/Resources/steak burger eng.png" alt="1">
                </a>
            </li>
        </ul>
    </div>
    <div class="column">
        <ul style="list-style: none;">
            <li>
                <a href="@Url.Action("ItalyUA","ItalyUA",new HomeViewModel {isQR = Model.isQR })">
                    <img class="image" src="/Resources/italy eng.png" alt="1">
                </a>
                <a href="@Url.Action("Categorie","SushiUA",new FoodetoryMenuGeorgian.Models.SushiUA.GeorgianUAViewModel {isQR = Model.isQR, categorieName = "Maki"})">
                    <img class="image" src="/Resources/sushi city eng.jpg" alt="1">
                </a>
            </li>
        </ul>
    </div>
</div>
