@model FoodetoryMenuGeorgian.Models.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="/css/main.css">
</head>
@{
    <img id="contol" class="btn_control" src="~/Resources/flag-of-armenia.jpg" />
    <a href="@Url.Action("RossiaMall","Location",new HomeViewModel {isQR = Model.isQR })">
        <img id="btn" class="btn" src="/Resources/USFLag.jpg" height="60" width="90" alt="clear" />
    </a>
    <a href="@Url.Action("RossiaMall","Location",new HomeViewModel {isQR = Model.isQR })">
        <img id="btn_rus" class="btn" src="/Resources/Flag-Russia.jpg" height="60" width="90" alt="clear" />
    </a>
    <a href="@Url.Action("RossiaMall","Location",new HomeViewModel {isQR = Model.isQR })">
        <img id="btn_arm" class="btn" src="/Resources/flag-of-armenia.jpg" height="60" width="90" alt="clear" />
    </a>
}
<div class="row">
    <div class="column">
        <ul style="list-style: none;">
            <li>
                <a href="@Url.Action("SteakRus","SteakRM",new HomeViewModel {isQR = Model.isQR })">
                    <img class="image" src="/Resources/steak burger rus.png" alt="1">
                </a>
                <a href="@Url.Action("GeorgianRus","GeorgianRM",new HomeViewModel {isQR = Model.isQR })">
                    <img class="image" src="/Resources/georgia rus.png" alt="1">
                </a>
            </li>
        </ul>
    </div>
    <div class="column">
        <ul style="list-style: none;">
            <li>
                <a href="@Url.Action("ItalyRus","ItalyRM",new HomeViewModel {isQR = Model.isQR })">
                    <img class="image" src="/Resources/italy rus.png" alt="1">
                </a>
                <a href="@Url.Action("BarRus","BarRM",new HomeViewModel {isQR = Model.isQR })">
                    <img class="image" src="/Resources/bar rus.png" alt="1">
                </a>
            </li>
        </ul>
    </div>
</div>
