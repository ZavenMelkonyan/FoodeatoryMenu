@model FoodetoryMenuGeorgian.Models.SushiViewModel
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN">
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="/css/menu.css">
</head>
@{
    <img id="contol" class="btn_control" src="~/Resources/flag-of-armenia.jpg" />
    <a href="@Url.Action("Product","Georgian",new SushiViewModel { NameAndPrice = Model.NameAndPrice, Description = Model.Description, MenuName = Model.MenuName, Src = Model.Src, Lang = "Eng"})">
        <img id="btn" class="btn" src="/Resources/USFLag.jpg" height="60" width="90" alt="clear" />
    </a>
    <a href="@Url.Action("Product","Georgian",new SushiViewModel { NameAndPrice = Model.NameAndPrice, Description = Model.Description, MenuName = Model.MenuName, Src = Model.Src, Lang = "Rus"})">
        <img id="btn_rus" class="btn" src="/Resources/Flag-Russia.jpg" height="60" width="90" alt="clear" />
    </a>
    <a href="@Url.Action("Product","Georgian",new SushiViewModel { NameAndPrice = Model.NameAndPrice, Description = Model.Description, MenuName = Model.MenuName, Src = Model.Src, Lang = "Arm"})">
        <img id="btn_arm" class="btn" src="/Resources/flag-of-armenia.jpg" height="60" width="90" alt="clear" />
    </a>
    <a href="@Url.Action(Model.Lang == "Eng"? "Categorie": Model.Lang == "Arm"? "CategorieArm" : "CategorieRus" ,"Georgian",new FoodetoryMenuGeorgian.Models.Georgian.GeorgianViewModel { categorieName = Model.MenuName})">
        <img id="btn_back" class="btn" src="/Resources/1024px-Back_Arrow.svg.png" height="90" width="90" alt="clear" />
    </a>
    <div class="row_item">
        <div class="column_item">
            <ul style="list-style: none;">
                <li>
                    <h1>@Model.NameAndPrice</h1>
                    <img class="image" src="@Model.Src" alt="1">
                </li>
            </ul>
        </div>
        <div class="column_item">
            <ul style="list-style: none;">
                <li>
                    <h1>@Model.Description</h1>
                </li>
            </ul>
        </div>
    </div>
}
